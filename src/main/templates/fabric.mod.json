{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${mod_version}",
  "name": "${mod_name}",
  "description": "${mod_description}",
  "authors": [ "${mod_author}" ],
  "contact": {
    "homepage": "${mod_homepage}",
    "sources": "${mod_sources}",
    "issues": "${mod_issues}"
  },
  "license": "${mod_license}",
  "icon": "icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      "dev.chililisoup.bigsignwriter.loaders.fabric.FabricEntrypoint"
    ],
    "modmenu": [
      "dev.chililisoup.bigsignwriter.compat.ModMenuIntegration"
    ]
  },
  "mixins": [
    "bigsignwriter.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.15",
    "minecraft": "${minecraft_range}"
  },
  "recommends": {
    "fabric-api": "*",
    "yet_another_config_lib_v3": "*"
  }
}
